<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder='輸入餐廳、分類或地址縮小範圍 (以","區分不同關鍵字)'
            aria-label="Restaurant Name..." aria-describedby="search-button" value="{{ keywords }}">
          <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          <a href="./restaurants/new" class="btn btn-major" style="margin-left: 20px">Add New</a>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-3">
  <div class="row sort-col">
    {{#if keywords}}
    <h5 id="search-hint">共找到 {{ restaurants.length }} 筆符合資料!</h5>
    {{/if}}
    <div class="dropdown">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sort" data-bs-toggle="dropdown"
        aria-expanded="false">
        Sort
      </button>
      <ul class="dropdown-menu" aria-labelledby="sort">
        <li>
          <a class="dropdown-item" href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=name">A > Z
            (Default)</a>
        </li>
        <li>
          <a class="dropdown-item" href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=-name">Z > A</a>
        </li>
        <li>
          <a class="dropdown-item"
            href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=category">Category</a>
        </li>
        <li>
          <a class="dropdown-item"
            href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=location">Location</a>
        </li>
        <li>
          <a class="dropdown-item" href="{{#if keywords}}?keyword={{keywords}}&{{else}}?{{/if}}sort=rating">rating</a>
        </li>
      </ul>
    </div>
  </div>

  <div class="row mt-0 py-0">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3 mt-3 restaurant-card">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
        </a>
        <div class="card-footer">
          <a href="./restaurants/{{ this._id }}">More</a>
          <a href="./restaurants/{{ this._id }}/edit" style="color: green">Edit</a>
          <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" style="color: red">Delete</a>
          </form>

        </div>
      </div>


      {{/each}}

    </div>
  </div>
</div>
</div>